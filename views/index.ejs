<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="favicon.ico">

    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="bootstrap.min.css">

    <script src="AgoraRTC_N.js"></script>
    <script src="agora-rtm-sdk.js"></script>

    <!-- Jquery -->
    <script src="jquery-3.4.1.min.js"></script>
    <!-- Bootstrap -->
    <script src="bootstrap.bundle.min.js"></script>
    <!-- Socket.io -->
    <script src="/socket.io/socket.io.js"></script>

    <title>WebRTC DC</title>

    <%- include("./settings") %>
        <%- include("./fileshare") %>
            <%- include("./newuser") %>
                <%- include("./profile") %>
</head>

<body>
    <div class="header">
        <div class="logo">
            <img class="img__logo" src="logo.svg" alt="">
        </div>
        <div class="nav__container">
            <div class="fileshare" data-toggle="modal" data-target="#fileshareModal">
                <i class="far fa-file"></i>
                <span>File Share</span>
            </div>
            <!-- <div class="deviceSetting" id="deviceSettingBtn" data-toggle="modal" data-target="#deviceSettingModal">
                <i class="fas fa-cog"></i>
                <span>Device Setting</span>
            </div> -->
        </div>
    </div>
    <div class="main">
        <div class="main__left">
            <div class="videos__group">
                <div id="video-grid">
                    <div id="local__video__container">
                        <p id="local-player-name" class="player-name"></p>
                    </div>
                    <div id="remote__video__container">
                        <div id="remote-playerlist"></div>
                    </div>
                </div>
            </div>
            <div class="options">
                <div class="options__left">
                    <div id="muteVideo" class="options__button">
                        <i id="videoIcon" class="fas fa-video"></i>
                        <span>Cam</span>
                    </div>
                    <div id="muteAudio" class="options__button">
                        <i id="audioIcon" class="fa fa-microphone"></i>
                        <span>Mic</span>
                    </div>
                    <div id="showChat" class="options__button">
                        <i class="fa fa-comment"></i>
                        <span>Chat</span>
                    </div>
                    <div id="shareScreen" class="options__button">
                        <i class="fas fa-share-square"></i>
                        <span>Screen</span>
                    </div>
                    <div id="momentShare" class="options__button">
                        <i class="fas fa-brain"></i>
                        <span>Web</span>
                    </div>
                    <!-- <div id="speechRecognition" class="options__button">
                        <i class="fas fa-headset"></i>
                    </div>
                    <div id="flipCamera" class="options__button">
                        <i class="fas fa-mobile-alt"></i>
                    </div> -->
                    <!-- <div id="copyUrl" class="options__button">
                        <i class="far fa-clipboard"></i>
                        <span>Url</span>
                    </div> -->
                </div>
                <div class="options__right">
                    <div id="room__in" class="options__button" data-toggle="modal" data-target="#newUserModal">
                        <i class="fas fa-sign-in-alt"></i>
                        <span>Login</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="main__right">
            <div class="main__header">
                <div class="header__back">
                    <i class="fas fa-angle-left"></i>
                </div>
            </div>
            <div class="main__chat_window">
                <div class="messages" id="messages"></div>
            </div>
            <div class="main__message_container">
                <input id="chat_message" type="text" autocomplete="off" placeholder="Type message here..."
                    maxlength="100">
                <div id="send" class="options__button">
                    <i class="fas fa-paper-plane" aria-hidden="true"></i>
                </div>
            </div>
        </div>
    </div>

    <script src="rtcClient.js"></script>
    <script src="rtmClient.js" type="module"></script>

    <!-- <script src="recodingDeviceCtrl.js" type="module"></script> -->
    <script src="screenShare.js"></script>
    <script src="momentShare.js"></script>
    <script src="fileShare.js"></script>
    <script src="muteUtils.js"></script>
    <script src="copyUrl.js"></script>
    <script src="chat.js"></script>
</body>

</html>