<div class="modal fade" id="channelCreate" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    Channel Create
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="channelCreate-form">
                    <div class="row admin-info-group">

                        <div class="col-sm">
                            <p class="admin-info-text">Admin ID</p>
                            <input id="adminId" type="text" placeholder="Enter the AdminID" required />
                        </div>
                        <div class="col-sm">
                            <p class="admin-info-text">Admin Password</p>
                            <input id="adminPassword" type="password" placeholder="Enter the Admin Password" />
                        </div>
                    </div>
                    <br>
                    <div class="row roomSetting-info-group">

                        <div class="col-sm">
                            <input id="public_active" name="drone" type="radio" value="Public" checked />
                            <label for="public_active">Public</label>
                        </div>
                        <div class="col-sm">
                            <input id="private_active" name="drone" type="radio" value="Private" />
                            <label for="private_active">Private</label>
                        </div>

                        <div class="col-sm">
                            <p class="channel-info-text">Channel Name</p>
                            <input id="channelName" type="text" placeholder="Enter the Channel Name">
                        </div>
                        <div class="col-sm">
                            <p class="channel-info-text">Channel Password</p>
                            <input id="channelPassword" type="password" placeholder="Enter the Channel Password">
                        </div>
                    </div>
                    <br><br>
                    <div class="row category-info-group">

                        <div class="col-sm">
                            <label for="theme-category">Category</label>

                            <select id="theme-category">
                                <option value="outdoor">Outdoor</option>
                                <option value="sport">Sport</option>
                                <option value="food">Food</option>
                                <option value="movie">Movie</option>
                                <option value="game">Game</option>
                                <option value="coding">Coding</option>
                            </select>
                        </div>
                    </div>

                    <div class="row description-info-group">

                        <div class="col-sm">
                            <label for="description">Description</label>

                            <textarea name="channel-description" id="channel-description" cols="50"
                                rows="10"></textarea>
                        </div>
                    </div>
                    <br><br>
                    <div class="button-group">
                        <button id="create" type="submit" class="btn btn-primary btn-sm">
                            Create
                        </button>
                        <button id="update" type="button" class="btn btn-primary btn-sm" disabled>
                            Update
                        </button>
                        <button id="remove" type="button" class="btn btn-primary btn-sm" disabled>
                            Remove
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>